Algoritmo rectatria
	//Incializar
	Definir a,b Como Real;
	//Pedir variable
	Imprimir "TE ORDENO QUE ME ENTREGUES LA BASE Y LA ALTURA DE TU TRIANGULO >:(. (En cm)";
	//Leer Variables
	Imprimir "Altura es: ";
	Leer a;
	Imprimir "Base es: ";
	Leer b;
	//Imprimir resultado
	Imprimir "El perímetro de tu triángulo es ", ((a^2 + b^2)^(0.5)) + a + b, "cm."; 
	Imprimir "El área de tu triángulo es ", (a*b)/2, "cm.";
